@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio de Sesión";
}
<br />
<div class="container" id="main">
    

    <div class="row">
        <div class="col-md">

        </div>
        <div class="col-md">
            <h3 class="text-info">@ViewData["Title"]</h3>
            <form method="post" class="form-signin">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Dirección Email" required autofocus />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-outline-info">
                        <i class="fas fa-key"></i> Iniciar Sesión
                    </button>
                </div>
                <a asp-page="ForgotPassword" class="btn-outline-secondary"><i class="fas fa-unlock-alt"></i> Recuperar contraseña</a>
            </form>

        </div>

        <div class="col-md">

        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
