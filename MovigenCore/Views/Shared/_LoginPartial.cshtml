@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item" style="padding-right:20px;">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link" title="Manage">Hola @User.Identity.Name.Substring(0, User.Identity.Name.IndexOf("@"))!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link nav-link">Cerrar Sesion</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right navbar-collapse justify-content-end">
        <!--<li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Registro</a>
        </li>-->
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link"><i class="fas fa-key"></i></a>
        </li>
    </ul>
}